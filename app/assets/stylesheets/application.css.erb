

@import url(https://fonts.googleapis.com/css?family=Bangers|Oswald:400,900italic,900,800italic,800,700italic|Roboto|Molengo);
@import url(https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css);



#index-main {
  margin: 0% 5% 5% 0%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}


#advotar-image {
  max-width: 100%;
  height: 100vh;
  opacity: 0.2;
  filter: alpha(opacity=30);
  display: block;
  margin: auto;
}

#advotar-container {
    height: 100vh;
    background-color: transparent;
    background-image: image-url('advotar.jpg');
    position: absolute;
    overflow: hidden;
    margin-top: 0vh;
    z-index: -1;
}





#title-container {
  background-color: transparent;
  height: 20%;
  align-self: flex-start;
  position: absolute;
  margin-top: 2vh;
}

#title-container h1 {
  color: #3772FF;
  text-align: center;
  font: 100px Bangers;
  padding: 0;
}



#index-text {
  background-color: transparent;
  align-self: flex-end;
  height: 22vh;
}

#index-text h3 {
  font: 22px Bangers;
  font-weight: bolder;
  text-align: center;
}

#index-text p {
  font: 18px 'Oswald';
  visibility: hidden;
}


#login-button {
  background-color: #F038FF;
  color: black;
  font: 25px 'Bangers';
  height: 2.6em;
  padding: .8em;
  margin-top: 30vh;
}

#login-button:hover {
  background-color: #E2EF70;
}







html {
  position: relative;
  min-height: 100%;
}

body {
  background-color: white;
}

footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 60px;
  background-color: transparent;
  visibility: hidden;
}

footer p {
  font: 14px 'Oswald';
  margin: 0;
  padding: 0;
}


@media(min-width:34em){
  #title-container h1 {
    font-size: 140px;
  }
   #login-button {
    margin-top: 33vh;
  }
  #index-text h3 {
  font: 30px Bangers;
}
  #login-button {
      margin-top: 35vh;
    }
  }




@media(min-width:48em){
  #advotar-image {
    opacity: 1;
    filter: alpha(opacity=100);
  }
  #login-button {
    margin-top: 7vh;
  }
  #index-text {
    background-color: white;
  }
  #index-text p {
    visibility: visible;
  }
  footer {
    visibility: visible;
  }
  #index-text h3 {
  font: 36px Bangers;
  }
}



