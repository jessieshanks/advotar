<p id="notice"><%= notice %></p>

<h1>Listing Warriors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @warriors.each do |warrior| %>
      <tr>
        <td><%= warrior.name %></td>
        <td><%= warrior.birthdate %></td>
        <td><%= link_to 'Show', warrior %></td>
        <td><%= link_to 'Edit', edit_warrior_path(warrior) %></td>
        <td><%= link_to 'Destroy', warrior, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

