

<!-- <div class="show-title">Squad Page</div> -->
<%= render 'layouts/header' %>



<div class="page-title-tron container-fluid col-md-10 col-md-offset-1" id="sqad-box">
  <div class="page-title" id="show-squad-title"><h1><%= @squad.name %></h1></div>
  <div id="show-squad-motto"><h3><%= @squad.motto %></h3></div>
</div>


<div class="container-fluid col-md-12">
    <!-- <h2>Squad Members</h2> -->

    <div class="container-fluid col-md-10 col-md-offset-1" id="warriors-list">
        <% if !(@squad.warriors.blank?) %>
          <% @squad.warriors.each do |warrior| %>
            <!-- button/card to go to the warrior show view -->
            <div class="container-flud col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
              <a href="/warriors/<%=warrior.id%>" class="warrior-card col-md-12" style="background:<%=warrior.color%>;">
                <h2><%= warrior.name %></h2>
              </a>
            </div>
           <% end %>
        <% else %>
            <% puts "blank" %>
        <% end %>
    </div>

</div>


